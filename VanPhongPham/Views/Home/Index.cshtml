@{
    ViewData["Title"] = "Trang chủ";
}
<!-- Banner full màn hình -->
<div id="banner" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/banner1.jpg" asp-append-version="true" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Sản phẩm nổi bật 1">
        </div>
    </div>
    <!-- Nút điều hướng -->
    <button class="carousel-control-prev" type="button" data-bs-target="#banner" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#banner" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Sản phẩm -->
<div class="container">
    <h2 class="mb-4">Sản phẩm mới</h2>
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card product-card h-100">
                <img src="~/images/butbi.jpg" asp-append-version="true" class="card-img-top" alt="Bút bi">
                <div class="card-body text-center">
                    <h5 class="card-title">Bút bi Thiên Long</h5>
                    <p class="text-danger fw-bold">5,000đ</p>
                    <button class="btn btn-success">Thêm vào giỏ</button>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card product-card h-100">
                <img src="~/images/vohoc.jpg" asp-append-version="true" class="card-img-top" alt="Vở học sinh">
                <div class="card-body text-center">
                    <h5 class="card-title">Vở kẻ ngang Campus</h5>
                    <p class="text-danger fw-bold">12,000đ</p>
                    <button class="btn btn-success">Thêm vào giỏ</button>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card product-card h-100">
                <img src="~/images/giayin.jpg" asp-append-version="true" class="card-img-top" alt="Giấy in">
                <div class="card-body text-center">
                    <h5 class="card-title">Giấy A4 Double A</h5>
                    <p class="text-danger fw-bold">60,000đ</p>
                    <button class="btn btn-success">Thêm vào giỏ</button>
                </div>
            </div>
        </div>
    </div>
</div>
