@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<style>
    .order-success-wrap {
        max-width: 720px;
        margin: 40px auto;
        padding: 28px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
        font-family: system-ui, -apple-system, "Segoe UI", Arial, sans-serif;
    }

    .order-success-title {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 26px;
        color: #2e7d32;
        margin: 0 0 12px;
    }

        .order-success-title .badge {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: #2e7d32;
            color: #fff;
            font-weight: 700;
        }

    .order-success-text {
        color: #475569;
        line-height: 1.6;
        margin: 0 0 18px;
    }

    .btn-success {
        display: inline-block;
        background: #22c55e;
        color: #fff;
        text-decoration: none;
        padding: 10px 16px;
        border-radius: 10px;
        font-weight: 600;
        transition: transform .08s ease, box-shadow .2s ease;
    }

        .btn-success:hover {
            box-shadow: 0 6px 18px rgba(34,197,94,.35);
            transform: translateY(-1px);
        }
</style>

<div class="order-success-wrap">
    <h2 class="order-success-title">
        <span class="badge">✓</span> Đặt hàng thành công!
    </h2>
    <p class="order-success-text">
        Cảm ơn bạn đã mua hàng. Đơn hàng của bạn đã được ghi nhận.
    </p>

    <a asp-controller="Home" asp-action="Index" class="btn-success">
        Tiếp tục mua sắm
    </a>
</div>
