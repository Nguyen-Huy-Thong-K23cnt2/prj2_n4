@{
    ViewData["Title"] = "Đăng xuất";
    Layout = "_Layout";   // Hoặc null nếu muốn trang trống
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-2">Đăng xuất</h3>
                    <p class="text-muted mb-4">
                        Bạn có chắc chắn muốn đăng xuất khỏi tài khoản không?
                    </p>

                    <form asp-action="DangXuat" method="post" class="d-flex gap-2">
                        @Html.AntiForgeryToken()

                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                        </button>

                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            Ở lại trang chủ
                        </a>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    Đang đăng nhập dưới tên:
                    <strong>@(User?.Identity?.Name ?? Context.Session.GetString("UserEmail"))</strong>
                </small>
            </div>
        </div>
    </div>
</div>
