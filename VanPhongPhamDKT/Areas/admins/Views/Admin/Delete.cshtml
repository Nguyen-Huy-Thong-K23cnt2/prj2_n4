@model VanPhongPhamDKT.Models.Admin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Xóa Admin";
}

<h2>Xóa Admin</h2>
<hr />

<div>
    <h5>Bạn có chắc chắn muốn xóa admin này?</h5>
    <dl class="row">
        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.HoTen</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">SĐT</dt>
        <dd class="col-sm-10">@Model.SoDienThoai</dd>

        <dt class="col-sm-2">Chức vụ</dt>
        <dd class="col-sm-10">@Model.ChucVu</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
