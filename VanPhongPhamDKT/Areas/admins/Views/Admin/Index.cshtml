@model IEnumerable<VanPhongPhamDKT.Models.Admin>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Danh sách Admin";
}

<h2 class="mb-3">Danh sách Admin</h2>

<p>
    <a class="btn btn-primary" asp-area="admins" asp-controller="Admin" asp-action="Create">
        + Thêm mới Admin
    </a>
</p>


<table class="table table-bordered table-hover table-striped align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.HoTen)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Mật khẩu</th>
            <th>@Html.DisplayNameFor(model => model.SoDienThoai)</th>
            <th>@Html.DisplayNameFor(model => model.ChucVu)</th>
            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
            <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.Email</td>
                <td>******</td>
                <td>@item.SoDienThoai</td>
                <td>@item.ChucVu</td>
                <td>@(item.NgayTao.HasValue ? item.NgayTao.Value.ToString("dd/MM/yyyy") : "")</td>
                <td>@(item.TrangThai == true ? "Hoạt động" : "Khóa")</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a class="btn btn-sm btn-warning me-1"
                           asp-area="admins" asp-controller="Admin" asp-action="Edit" asp-route-id="@item.MaId">
                            Sửa
                        </a>
                        <a class="btn btn-sm btn-info me-1"
                           asp-area="admins" asp-controller="Admin" asp-action="Details" asp-route-id="@item.MaId">
                            Xem
                        </a>
                        <a class="btn btn-sm btn-danger"
                           asp-area="admins" asp-controller="Admin" asp-action="Delete" asp-route-id="@item.MaId"
                           onclick="return confirm('Bạn có chắc muốn xóa admin này không?');">
                            Xóa
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-area="admins" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
        ⬅ Quay về trang chủ
    </a>
</p>

<style>
    .table-responsive {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        overflow-x: auto;
    }

    .table th {
        background: #0d6efd;
        color: #fff;
        font-weight: 600;
        text-align: center;
    }

    .table td {
        text-align: center;
        vertical-align: middle;
        padding: 0.5rem;
    }

    .table img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border: 1px solid #dee2e6;
        border-radius: 6px;
    }

    .table-hover tbody tr:hover {
        background: #f1f3f5;
    }

    .btn-sm i {
        margin-right: 4px;
    }
</style>