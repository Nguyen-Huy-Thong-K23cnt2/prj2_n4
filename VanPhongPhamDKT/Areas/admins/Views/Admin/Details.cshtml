@model VanPhongPhamDKT.Models.Admin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chi tiết Admin";
}

<h2>Chi tiết Admin</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.HoTen</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">SĐT</dt>
    <dd class="col-sm-10">@Model.SoDienThoai</dd>

    <dt class="col-sm-2">Chức vụ</dt>
    <dd class="col-sm-10">@Model.ChucVu</dd>

    <dt class="col-sm-2">Ngày tạo</dt>
    <dd class="col-sm-10">@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Trạng thái</dt>
    <dd class="col-sm-10">@(Model.TrangThai == true ? "Hoạt động" : "Khóa")</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
