@model VanPhongPhamDKT.Models.Admin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chi tiết Admin";
}


<link rel="stylesheet" href="~/css/admin.css" />

<!-- Nền riêng (tuỳ chọn, bỏ nếu không cần) -->
<div class="site-bg--detail-admin"></div>

<div class="detail-admin-page">
    <h2 class="page-title mb-1">Chi tiết Admin</h2>
    <p class="page-desc">Thông tin quản trị viên.</p>

    <div class="detail-card">
        <dl class="detail-grid">
            <dt>Họ tên</dt>
            <dd>@Model.HoTen</dd>

            <dt>Email</dt>
            <dd>@Model.Email</dd>

            <dt>SĐT</dt>
            <dd>@Model.SoDienThoai</dd>

            <dt>Chức vụ</dt>
            <dd>@Model.ChucVu</dd>

            <dt>Ngày tạo</dt>
            <dd>@(Model.NgayTao?.ToString("dd/MM/yyyy"))</dd>

            <dt>Trạng thái</dt>
            <dd>
                @if (Model.TrangThai == true)
                {
                    <span class="badge-state badge-on">Hoạt động</span>
                }
                else
                {
                    <span class="badge-state badge-off">Khóa</span>
                }
            </dd>
        </dl>

        <div class="detail-actions">
            <a asp-area="admins" asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.MaId"
               class="btn btn-save">Sửa</a>
            <a asp-area="admins" asp-controller="Admin" asp-action="Index"
               class="btn btn-cancel btn-back-slim">Quay lại</a>
        </div>
    </div>
</div>