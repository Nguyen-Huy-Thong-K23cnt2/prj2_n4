﻿@{
    ViewData["Title"] = "Bảng điều khiển";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/dashboard.css" />


<!-- LAYER NỀN – đứng sau nội dung nhưng đứng trước background trắng của body -->
<div id="bg-dashboard" aria-hidden="true"></div>
<div class="page-dashboard">
<div class="app-shell">
    <!-- Sidebar -->
    <aside class="app-sidebar">
        <div class="title"><i class="fa-solid fa-crown"></i> Admin</div>
        <ul class="menu">
            <li>
                <a class="menu-link active" asp-area="admins" asp-controller="Admin" asp-action="Index">
                    <span class="mi"><i class="fa-solid fa-user-shield"></i></span>
                    Quản lý Admin
                    <span class="badge">4</span>
                </a>
            </li>
            <li>
                <a class="menu-link" asp-area="admins" asp-controller="SanPham" asp-action="Index">
                    <span class="mi"><i class="fa-solid fa-box-open"></i></span>
                    Quản lý Sản phẩm
                </a>
            </li>
            <li>
                <a class="menu-link" asp-area="admins" asp-controller="KhachHang" asp-action="Index">
                    <span class="mi"><i class="fa-solid fa-users"></i></span>
                    Quản lý Khách hàng
                </a>
            </li>
            <li>
                <a class="menu-link" asp-area="admins" asp-controller="DonHang" asp-action="Index">
                    <span class="mi"><i class="fa-solid fa-cart-shopping"></i></span>
                    Quản lý Đơn hàng
                </a>
            </li>
        </ul>
    </aside>

    <!-- Content -->
    <main class="app-content">
        <!-- Top nav tuỳ chọn -->
        <div class="app-nav">
            <div class="app-brand">
                <i class="fa-solid fa-cart-shopping"></i>
                <span>VanPhongPham <small>Giao diện quản trị</small></span>
            </div>
            @* <div class="d-flex gap-2"> *@
            @*     <a asp-area="" asp-controller="Auth" asp-action="Login" class="btn-pill btn-primary-glass">Đăng nhập</a> *@
            @*     <a asp-area="" asp-controller="Auth" asp-action="Register" class="btn-pill btn-outline-glass">Đăng ký</a> *@
            @* </div> *@
        </div>

        <h2 class="section-title">Bảng điều khiển</h2>
        <p class="text-muted">Chọn chức năng bạn muốn quản lý:</p>

        <div class="card-grid">
            <a asp-area="admins" asp-controller="Admin" asp-action="Index" class="card-link">
                <div class="card-glass">
                    <div class="card-top">
                        <div class="icon-wrap icon--primary"><i class="fa-solid fa-user-shield"></i></div>
                        <i class="fa-solid fa-arrow-right"></i>
                    </div>
                    <h5 class="card-title">Quản lý Admin</h5>
                    <p class="card-desc">Thêm, sửa, xoá tài khoản quản trị.</p>
                </div>
            </a>

            <a asp-area="admins" asp-controller="SanPham" asp-action="Index" class="card-link">
                <div class="card-glass">
                    <div class="card-top">
                        <div class="icon-wrap icon--success"><i class="fa-solid fa-box-open"></i></div>
                        <i class="fa-solid fa-arrow-right"></i>
                    </div>
                    <h5 class="card-title">Quản lý Sản phẩm</h5>
                    <p class="card-desc">Kho & thông tin sản phẩm.</p>
                </div>
            </a>

            <a asp-area="admins" asp-controller="KhachHang" asp-action="Index" class="card-link">
                <div class="card-glass">
                    <div class="card-top">
                        <div class="icon-wrap icon--info"><i class="fa-solid fa-users"></i></div>
                        <i class="fa-solid fa-arrow-right"></i>
                    </div>
                    <h5 class="card-title">Quản lý Khách hàng</h5>
                    <p class="card-desc">Theo dõi & CSKH.</p>
                </div>
            </a>

            <a asp-area="admins" asp-controller="DonHang" asp-action="Index" class="card-link">
                <div class="card-glass">
                    <div class="card-top">
                        <div class="icon-wrap icon--warn"><i class="fa-solid fa-cart-shopping"></i></div>
                        <i class="fa-solid fa-arrow-right"></i>
                    </div>
                    <h5 class="card-title">Quản lý Đơn hàng</h5>
                    <p class="card-desc">Đơn hàng & vận chuyển.</p>
                </div>
            </a>
        </div>
    </main>
</div>
</div>