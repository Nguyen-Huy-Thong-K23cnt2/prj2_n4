@using VanPhongPhamDKT.Models
@model IEnumerable<SanPham>

@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string Src(string? p) => string.IsNullOrWhiteSpace(p)
        ? Url.Content("~/assets/img/placeholder-200x200.png")
        : (p.StartsWith("http", StringComparison.OrdinalIgnoreCase) ? p : Url.Content(p));

    string Fmt(decimal v) => string.Format("{0:N0} ₫", v);
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0">Danh sách sản phẩm</h2>
        <a asp-area="admins" asp-controller="SanPham" asp-action="Create" class="btn btn-success">
            <i class="fa fa-plus"></i> Thêm sản phẩm
        </a>
    </div>

    @if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:80px">Ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th style="width:160px">Giá</th>
                        <th style="width:110px">SL</th>
                        <th style="width:220px">Danh mục</th>
                        <th style="width:220px" class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sp in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Src(sp.HinhAnh)" alt="@sp.TenSp" class="rounded"
                                     style="width:64px;height:64px;object-fit:cover;border:1px solid #eee" />
                            </td>
                            <td class="fw-semibold">@sp.TenSp</td>
                            <td>@Fmt(sp.Gia)</td>
                            <td>@sp.SoLuong</td>
                            <td>@(sp.MaDmNavigation?.TenDm ?? $"#{sp.MaDm}")</td>
                            <td class="text-end">
                                <a asp-area="admins" asp-controller="SanPham" asp-action="Details" asp-route-id="@sp.MaSp"
                                   class="btn btn-sm btn-outline-secondary">
                                    <i class="fa fa-eye"></i> Chi tiết
                                </a>
                                <a asp-area="admins" asp-controller="SanPham" asp-action="Edit" asp-route-id="@sp.MaSp"
                                   class="btn btn-sm btn-warning">
                                    <i class="fa fa-pen"></i> Sửa
                                </a>
                                <a asp-area="admins" asp-controller="SanPham" asp-action="Delete" asp-route-id="@sp.MaSp"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Xoá sản phẩm này?');">
                                    <i class="fa fa-trash"></i> Xoá
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Footer actions -->
<div class="mt-3">
    <a asp-area="admins" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
        ⬅ Quay về trang chủ quản trị
    </a>
</div>
</div>