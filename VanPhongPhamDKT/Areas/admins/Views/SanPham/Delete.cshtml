@model VanPhongPhamDKT.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold text-danger mb-3"><i class="fa-solid fa-trash"></i> Xóa sản phẩm</h2>

    <div class="alert alert-danger">
        Bạn có chắc muốn xóa sản phẩm <b>@Model.TenSp</b> không?
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaSp" />
        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
