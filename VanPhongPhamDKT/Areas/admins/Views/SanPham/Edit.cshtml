@model VanPhongPhamDKT.Models.SanPham

@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold text-warning mb-3"><i class="fa-solid fa-pen"></i> Sửa sản phẩm</h2>

    <form asp-action="Edit" enctype="multipart/form-data" class="card shadow p-4">
        <input type="hidden" asp-for="MaSp" />

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Tên sản phẩm</label>
                <input asp-for="TenSp" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Giá</label>
                <input asp-for="Gia" class="form-control" type="number" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" type="number" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Hình ảnh mới (nếu muốn đổi)</label>
                <input asp-for="HinhAnh" class="form-control" type="file" name="ImageFile" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Danh mục</label>
                <select asp-for="MaDm" asp-items="ViewBag.MaDm" class="form-select"></select>
            </div>
            <div class="col-12">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning"><i class="fa-solid fa-save"></i> Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>
