@model VanPhongPhamDKT.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold text-info mb-3"><i class="fa-solid fa-eye"></i> Chi tiết sản phẩm</h2>

    <div class="card shadow p-4">
        <dl class="row">
            <dt class="col-sm-3">Tên sản phẩm</dt>
            <dd class="col-sm-9">@Model.TenSp</dd>

            <dt class="col-sm-3">Giá</dt>
            <dd class="col-sm-9">@String.Format("{0:N0} đ", Model.Gia)</dd>

            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.SoLuong</dd>

            <dt class="col-sm-3">Hình ảnh</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <img src="~/uploads/@Model.HinhAnh" width="150" class="rounded border" />
                }
                else
                {
                    <span class="text-muted">Chưa có</span>
                }
            </dd>

            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.MoTa</dd>

            <dt class="col-sm-3">Danh mục</dt>
            <dd class="col-sm-9">@Model.MaDmNavigation?.TenDm</dd>
        </dl>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.MaSp" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
