@model VanPhongPhamDKT.Models.DonHang
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statuses = new[] { "Mới", "Chờ duyệt", "Đang giao", "Hoàn tất", "Đã hủy" };
}

<link rel="stylesheet" href="~/css/donhang.css" asp-append-version="true" />
<div class="site-bg--donhang"></div> @* bỏ nếu không muốn nền blob *@

<div class="container mt-4 dh-page">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="dh-title mb-0">Thêm đơn hàng mới</h2>
        <a asp-action="Index" class="dh-back">← Quay lại</a>
    </div>

    <div class="dh-card">
        <div class="p-3 p-md-4">
            <form asp-action="Create" method="post" class="dh-form-glass needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="dh-form-error"></div>

                <!-- Khách hàng -->
                <div class="mb-3">
                    <label asp-for="MaKh" class="form-label"></label>
                    <select asp-for="MaKh" class="form-select" asp-items="ViewBag.MaKh" required>
                        <option value="">-- Chọn khách hàng --</option>
                    </select>
                    <div class="form-text">Nếu chưa có khách hàng, hãy thêm trước ở mục Khách Hàng.</div>
                    <span asp-validation-for="MaKh" class="dh-field-error"></span>
                </div>

                <!-- Ngày đặt (tùy chọn) -->
                <div class="mb-3">
                    <label asp-for="NgayDat" class="form-label"></label>
                    <input asp-for="NgayDat" type="datetime-local" class="form-control" />
                    <div class="form-text">Bỏ trống để hệ thống tự lấy thời điểm hiện tại.</div>
                    <span asp-validation-for="NgayDat" class="dh-field-error"></span>
                </div>

                <!-- Tổng tiền -->
                <div class="mb-3">
                    <label asp-for="TongTien" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="TongTien" type="number" class="form-control" min="0" step="1" inputmode="numeric"
                               placeholder="Nhập tổng tiền (đ)" />
                        <span class="input-group-text">đ</span>
                    </div>
                    <span asp-validation-for="TongTien" class="dh-field-error"></span>
                </div>

                <!-- Trạng thái -->
                <div class="mb-2">
                    <label asp-for="TrangThai" class="form-label"></label>
                    <select asp-for="TrangThai" class="form-select">
                        <option value="">-- Chọn trạng thái --</option>
                        @foreach (var s in statuses)
                        {
                            <option value="@s" selected="@(string.Equals(Model?.TrangThai, s, StringComparison.OrdinalIgnoreCase))">@s</option>
                        }
                    </select>
                    <div class="form-text">Để trống sẽ lưu “Mới”.</div>
                    <span asp-validation-for="TrangThai" class="dh-field-error"></span>
                </div>

                <div class="dh-actions">
                    <a asp-action="Index" class="btn dh-btn-cancel">Hủy</a>
                    <button type="submit" class="btn dh-btn-primary">Lưu đơn hàng</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', e => {
                    if (!form.checkValidity()) { e.preventDefault(); e.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}