@model VanPhongPhamDKT.Models.DonHang
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // hoặc giữ null nếu bạn muốn
    string title = $"Chi tiết đơn hàng #{Model?.MaDh}";
    string ngayDat = Model?.NgayDat?.ToString("dd/MM/yyyy HH:mm") ?? "-";
    string tongTien = string.Format("{0:N0} đ", Model?.TongTien ?? 0);
    string tenKhach = Model?.MaKhNavigation?.HoTen ?? Model?.MaKhNavigation?.Email ?? $"Mã KH: {Model?.MaKh}";
    string trangThai = Model?.TrangThai ?? "Không rõ";
    string badge = trangThai switch { "Hoàn tất" => "success", "Đang giao" => "info", "Chờ duyệt" => "warning", "Đã hủy" => "danger", _ => "secondary" };
}

<link rel="stylesheet" href="~/css/donhang.css" asp-append-version="true" />
<div class="site-bg--donhang"></div>

<div class="container mt-4 dh-page">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="dh-title mb-0">@title</h2>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="dh-back">← Quay về danh sách</a>
            <a asp-action="Edit" asp-route-id="@Model?.MaDh" class="btn dh-btn-primary">Sửa đơn</a>
        </div>
    </div>

    <!-- Thông tin đơn -->
    <div class="dh-card mb-4">
        <div class="p-3 p-md-4">
            <dl class="dh-dl">
                <dt>Mã đơn</dt>
                <dd>#@Model?.MaDh</dd>
                <dt>Ngày đặt</dt>
                <dd>@ngayDat</dd>
                <dt>Tổng tiền</dt>
                <dd class="text-danger fw-bold">@tongTien</dd>
                <dt>Trạng thái</dt>
                <dd><span class="badge bg-@badge px-3 py-2">@trangThai</span></dd>
                <dt>Khách hàng</dt>
                <dd>@tenKhach</dd>
                <dt>Mã khách</dt>
                <dd>#@Model?.MaKh</dd>
            </dl>
        </div>
    </div>

    <!-- Chi tiết sản phẩm -->
    @if (Model?.ChiTietDonHangs != null && Model.ChiTietDonHangs.Any())
    {
        <div class="dh-card">
            <div class="p-3 p-md-4">
                <h5 class="fw-bold text-white mb-3">Sản phẩm trong đơn</h5>
                <div class="table-responsive">
                    <table class="table dh-table align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th class="text-start">Sản phẩm</th>
                                <th class="text-center" style="width:120px">Số lượng</th>
                                <th class="text-end" style="width:160px">Đơn giá</th>
                                <th class="text-end" style="width:180px">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in Model.ChiTietDonHangs)
                            {
                                var tenSp = ct.MaSpNavigation?.TenSp ?? $"Mã SP: {ct.MaSp}";
                                <tr>
                                    <td class="text-start">
                                        <div class="fw-semibold">@tenSp</div>
                                        <div class="text-muted small">Mã SP: @ct.MaSp</div>
                                    </td>
                                    <td class="text-center">@ct.SoLuong</td>
                                    <td class="text-end">@string.Format("{0:N0} đ", ct.Gia)</td>
                                    <td class="text-end fw-semibold">@string.Format("{0:N0} đ", ct.Gia * ct.SoLuong)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-end mt-3">
                    <span class="me-2 text-muted">Tổng cộng:</span>
                    <span class="fw-bold text-danger">@string.Format("{0:N0} đ", Model?.TongTien ?? 0)</span>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="dh-card">
            <div class="p-3 p-md-4">
                <div class="alert alert-secondary mb-0 border-0">Chưa có chi tiết sản phẩm.</div>
            </div>
        </div>
    }

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.MaDh" class="btn dh-btn-primary">Sửa đơn</a>
        <a asp-action="Index" class="dh-back">← Quay về danh sách</a>
    </div>
</div>
