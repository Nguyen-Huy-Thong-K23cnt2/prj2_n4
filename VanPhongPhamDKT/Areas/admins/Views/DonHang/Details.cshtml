@model VanPhongPhamDKT.Models.DonHang
@{
    Layout = null;

    string title = $"Chi tiết đơn hàng #{Model?.MaDh}";
    string ngayDat = Model?.NgayDat?.ToString("dd/MM/yyyy HH:mm") ?? "-";
    string tongTien = string.Format("{0:N0} đ", Model?.TongTien ?? 0);
    string tenKhach = Model?.MaKhNavigation?.HoTen ?? Model?.MaKhNavigation?.Email ?? $"Mã KH: {Model?.MaKh}";
    string trangThai = Model?.TrangThai ?? "Không rõ";

    string badgeClass = trangThai switch
    {
        "Hoàn tất" => "success",
        "Đang giao" => "info",
        "Chờ duyệt" => "warning",
        "Đã hủy" => "danger",
        _ => "secondary"
    };
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <!-- Header nhỏ -->
    <header class="bg-dark text-white py-3 mb-4">
        <div class="container d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-card-list me-2"></i>@title</h5>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-light btn-sm">← Quay về danh sách</a>
                <a asp-action="Edit" asp-route-id="@Model?.MaDh" class="btn btn-warning btn-sm">
                    Sửa đơn
                </a>
            </div>
        </div>
    </header>

    <div class="container mb-5">

        <!-- Thông tin đơn -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="row gy-3">
                    <div class="col-md-3">
                        <div class="text-muted small">Mã đơn</div>
                        <div class="fw-semibold">#@Model?.MaDh</div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-muted small">Ngày đặt</div>
                        <div class="fw-semibold">@ngayDat</div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-muted small">Tổng tiền</div>
                        <div class="fw-semibold text-danger">@tongTien</div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-muted small">Trạng thái</div>
                        <span class="badge bg-@badgeClass fs-6">@trangThai</span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="row gy-3">
                    <div class="col-md-6">
                        <div class="text-muted small">Khách hàng</div>
                        <div class="fw-semibold">@tenKhach</div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-muted small">Mã khách hàng</div>
                        <div class="fw-semibold">#@Model?.MaKh</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chi tiết đơn hàng -->
        @if (Model?.ChiTietDonHangs != null && Model.ChiTietDonHangs.Any())
        {
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Chi tiết sản phẩm</h5>
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-start">Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ct in Model.ChiTietDonHangs)
                                {
                                    var tenSp = ct.MaSpNavigation?.TenSp ?? $"MaSP: {ct.MaSp}";
                                    var donGia = string.Format("{0:N0} đ", ct.Gia);
                                    var thanhTien = string.Format("{0:N0} đ", ct.Gia * ct.SoLuong);

                                    <tr>
                                        <td class="text-start">
                                            <div class="fw-semibold">@tenSp</div>
                                            <div class="text-muted small">Mã SP: @ct.MaSp</div>
                                        </td>
                                        <td class="text-center">@ct.SoLuong</td>
                                        <td class="text-end">@donGia</td>
                                        <td class="text-end fw-semibold">@thanhTien</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-end mt-3">
                        <span class="me-2 text-muted">Tổng cộng:</span>
                        <span class="fw-bold text-danger">@string.Format("{0:N0} đ", Model.TongTien)</span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-secondary border-0 shadow-sm">
                Chưa có chi tiết sản phẩm cho đơn hàng này.
            </div>
        }

        <div class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.MaDh" class="btn btn-primary">
                Sửa đơn
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                Quay về danh sách
            </a>
        </div>
    </div>

    <!-- Icon set + Bootstrap JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .card { border-radius: .75rem; }
        .table th, .table td { vertical-align: middle; }
    </style>
</body>
</html>
