@model VanPhongPhamDKT.Models.DonHang

@{
    Layout = null;

    string? tenKh = Model?.MaKhNavigation?.HoTen ?? $"Mã KH: {Model?.MaKh}";
    string ngayDat = Model?.NgayDat.HasValue == true
        ? Model.NgayDat.Value.ToString("dd/MM/yyyy HH:mm")
        : "(chưa có)";
    string tongTien = (Model?.TongTien ?? 0).ToString("N0") + " đ";
    string trangThai = string.IsNullOrWhiteSpace(Model?.TrangThai) ? "(chưa có)" : Model!.TrangThai!;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Xóa đơn hàng #@Model?.MaDh</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <!-- Header nhỏ -->
    <header class="bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-trash3 me-2"></i>Xóa đơn hàng #@Model?.MaDh</h5>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                ← Quay lại danh sách
            </a>
        </div>
    </header>

    <main class="container my-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- Cảnh báo -->
                <div class="alert alert-warning d-flex align-items-start" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                    <div>
                        <strong>Bạn chắc chắn muốn xóa đơn hàng này?</strong><br />
                        Hành động này <u>không thể hoàn tác</u>. Vui lòng kiểm tra thông tin bên dưới trước khi xác nhận.
                    </div>
                </div>

                <!-- Thông tin đơn -->
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">Thông tin đơn hàng</h5>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="p-3 border rounded-3 bg-light">
                                    <div class="text-muted small">Mã đơn hàng</div>
                                    <div class="fw-semibold">#@Model?.MaDh</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="p-3 border rounded-3 bg-light">
                                    <div class="text-muted small">Khách hàng</div>
                                    <div class="fw-semibold">@tenKh</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="p-3 border rounded-3 bg-light">
                                    <div class="text-muted small">Ngày đặt</div>
                                    <div class="fw-semibold">@ngayDat</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="p-3 border rounded-3 bg-light">
                                    <div class="text-muted small">Trạng thái</div>
                                    <span class="badge bg-@(trangThai.Equals("Hoàn tất", StringComparison.OrdinalIgnoreCase) ? "success" : "secondary")">
                                        @trangThai
                                    </span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="p-3 border rounded-3 bg-light d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">Tổng tiền</div>
                                    <div class="fw-bold fs-5 text-danger mb-0">@tongTien</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form xác nhận xóa -->
                <form asp-action="Delete" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="MaDh" />

                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3"></i> Xóa đơn hàng
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Hủy
                    </a>
                </form>

            </div>
        </div>
    </main>

    <!-- Footer nhỏ -->
    <footer class="text-center text-muted py-3">
        <small>© @DateTime.Now.Year Quản trị đơn hàng</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Ít CSS tinh chỉnh (tùy chọn) -->
    <style>
        .card { border-radius: .75rem; }
        .border { border-color: #eee !important; }
    </style>
</body>
</html>
