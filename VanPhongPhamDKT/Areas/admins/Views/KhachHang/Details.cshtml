@model VanPhongPhamDKT.Models.KhachHang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Chi tiết khách hàng</h2>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Mật khẩu</dt>
            <dd class="col-sm-9">@Model.MatKhau</dd>

            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@Model.DiaChi</dd>

            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.SoDienThoai</dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.MaKh" class="btn btn-warning mt-2">Sửa</a>
<a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
