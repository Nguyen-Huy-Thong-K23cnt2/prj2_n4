@model VanPhongPhamDKT.Models.KhachHang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/css/khachhang.css" asp-append-version="true" />

<!-- (tuỳ chọn) nền giống trang Khách hàng -->
<div class="site-bg--khachhang"></div>

<div class="kh-detail-page">
    <h2 class="kh-title mt-2">Chi tiết khách hàng</h2>

    <div class="kh-detail-card">
        <dl class="kh-detail-grid">
            <dt>Họ tên</dt>
            <dd>@Model.HoTen</dd>

            <dt>Email</dt>
            <dd>@Model.Email</dd>

            <dt>Mật khẩu</dt>
            <dd class="kh-mask">••••••</dd> @* Không show pass thật *@

            <dt>Địa chỉ</dt>
            <dd>@Model.DiaChi</dd>

            <dt>Số điện thoại</dt>
            <dd>@Model.SoDienThoai</dd>

            <dt class="col-sm-3">Chức vụ</dt>
            <dd class="col-sm-9">@Model.ChucVu</dd>

            <dt>Ngày tạo</dt>
            <dd>@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>
        </dl>

        <div class="kh-detail-actions">
            <a asp-action="Edit" asp-route-id="@Model.MaKh" class="btn kh-btn-primary">Sửa</a>
            <a asp-action="Index" class="btn kh-btn-cancel">Quay lại</a>
        </div>
    </div>
</div>