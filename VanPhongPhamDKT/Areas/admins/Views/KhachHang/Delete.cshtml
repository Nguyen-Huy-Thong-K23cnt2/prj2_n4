@model VanPhongPhamDKT.Models.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3 text-danger">Xóa khách hàng</h2>

<h4>Bạn có chắc chắn muốn xóa khách hàng này?</h4>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.SoDienThoai</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="MaKh" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
