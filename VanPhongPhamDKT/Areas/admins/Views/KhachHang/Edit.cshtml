@model VanPhongPhamDKT.Models.KhachHang

@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/css/khachhang.css" asp-append-version="true" />

<!-- (tuỳ chọn) nền giống trang Khách hàng -->
<div class="site-bg--khachhang"></div>

<div class="kh-edit-page">
    <h2 class="kh-title mt-2">Chỉnh sửa khách hàng</h2>

    <form asp-action="Edit" method="post" class="kh-form-glass">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaKh" />

        <div class="mb-3">
            <label asp-for="HoTen" class="form-label"></label>
            <input asp-for="HoTen" class="form-control" placeholder="Nguyễn Văn A" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="email@domain.com" />
        </div>

        <div class="mb-3">
            <label asp-for="MatKhau" class="form-label"></label>
            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Để trống nếu giữ nguyên" />
        </div>

        <div class="mb-3">
            <label asp-for="DiaChi" class="form-label"></label>
            <input asp-for="DiaChi" class="form-control" placeholder="Số nhà, đường, phường/xã" />
        </div>

        <div class="mb-3">
            <label asp-for="SoDienThoai" class="form-label"></label>
            <input asp-for="SoDienThoai" class="form-control" placeholder="09xx xxx xxx" />
        </div>

        <div class="mb-3">
            <label asp-for="ChucVu" class="form-label"></label>
            <input asp-for="ChucVu" class="form-control" />
            <span asp-validation-for="ChucVu" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NgayTao" class="form-label"></label>
            <input asp-for="NgayTao" type="date" class="form-control" />
        </div>

        <div class="kh-actions">
            <button type="submit" class="btn kh-btn-primary">Cập nhật</button>
            <a asp-action="Index" class="btn kh-btn-cancel">Hủy</a>
        </div>
    </form>
</div>