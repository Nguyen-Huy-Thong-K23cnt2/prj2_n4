@model VanPhongPhamDKT.Models.KhachHang

@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Chỉnh sửa khách hàng</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="MaKh" />

    <div class="form-group mb-2">
        <label asp-for="HoTen" class="form-label"></label>
        <input asp-for="HoTen" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="MatKhau" class="form-label"></label>
        <input asp-for="MatKhau" class="form-control" type="password" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="DiaChi" class="form-label"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="SoDienThoai" class="form-label"></label>
        <input asp-for="SoDienThoai" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="NgayTao" class="form-label"></label>
        <input asp-for="NgayTao" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
