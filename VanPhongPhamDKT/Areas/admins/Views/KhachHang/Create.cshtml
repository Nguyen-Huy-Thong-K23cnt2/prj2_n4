@model VanPhongPhamDKT.Models.KhachHang

@{
    ViewData["Title"] = "Thêm khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/khachhang.css" asp-append-version="true" />

<h2 class="kh-title mt-2">Thêm khách hàng mới</h2>

<!-- Nền riêng (tuỳ chọn, bỏ nếu không muốn) -->
<div class="site-bg--khachhang"></div>

<div class="kh-create-page">
    <form asp-action="Create" method="post" class="kh-form-glass">

        <div class="mb-3">
            <label asp-for="HoTen" class="form-label"></label>
            <input asp-for="HoTen" class="form-control" placeholder="Nguyễn Văn A" />
            <span asp-validation-for="HoTen" class="kh-field-error"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="email@domain.com" />
            <span asp-validation-for="Email" class="kh-field-error"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MatKhau" class="form-label"></label>
            <input asp-for="MatKhau" type="password" class="form-control" placeholder="••••••••" />
            <span asp-validation-for="MatKhau" class="kh-field-error"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DiaChi" class="form-label"></label>
            <input asp-for="DiaChi" class="form-control" placeholder="Số nhà, đường, phường/xã" />
        </div>

        <div class="mb-3">
            <label asp-for="SoDienThoai" class="form-label"></label>
            <input asp-for="SoDienThoai" class="form-control" placeholder="09xx xxx xxx" />
        </div>

        <div class="mb-3">
            <label asp-for="NgayTao" class="form-label"></label>
            <input asp-for="NgayTao" type="date" class="form-control" />
        </div>

        <div class="kh-actions">
            <button type="submit" class="btn kh-btn-primary">Lưu</button>
            <a asp-action="Index" class="btn kh-btn-cancel">Quay lại</a>
        </div>

    </form>
</div>