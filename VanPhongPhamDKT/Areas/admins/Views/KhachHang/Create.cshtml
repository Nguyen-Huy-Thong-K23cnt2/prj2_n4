@model VanPhongPhamDKT.Models.KhachHang

@{
    ViewData["Title"] = "Thêm khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Thêm khách hàng mới</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group mb-2">
        <label asp-for="HoTen" class="form-label"></label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="MatKhau" class="form-label"></label>
        <input asp-for="MatKhau" class="form-control" type="password" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="DiaChi" class="form-label"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="SoDienThoai" class="form-label"></label>
        <input asp-for="SoDienThoai" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="NgayTao" class="form-label"></label>
        <input asp-for="NgayTao" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
