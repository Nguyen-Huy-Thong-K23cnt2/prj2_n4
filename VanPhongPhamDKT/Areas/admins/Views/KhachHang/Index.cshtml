@model IEnumerable<VanPhongPhamDKT.Models.KhachHang>

@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/khachhang.css" asp-append-version="true" />

<!-- Nền riêng cho trang Khách hàng (bỏ nếu không muốn đổi nền) -->
<div class="site-bg--khachhang"></div>

<div class="kh-page">
    <h2 class="kh-title mt-2">Danh sách khách hàng</h2>

    <p>
        <a asp-action="Create" class="btn kh-btn-primary">+ Thêm khách hàng</a>
    </p>

    <div class="kh-table-wrap">
        <table class="table table-bordered table-striped kh-table">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.MaKh)</th>
                    <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.MatKhau)</th>
                    <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                    <th>@Html.DisplayNameFor(model => model.SoDienThoai)</th>
                    <th>@Html.DisplayNameFor(model => model.ChucVu)</th>
                    <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaKh</td>
                        <td>@item.HoTen</td>
                        <td>@item.Email</td>
                        <td data-mask="password"></td> @* ẩn mật khẩu *@
                        <td>@item.DiaChi</td>
                        <td>@item.SoDienThoai</td>
                        <td>@item.ChucVu</td>
                        <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MaKh" class="btn btn-warning btn-sm kh-btn-xs">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.MaKh" class="btn btn-info btn-sm kh-btn-xs">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.MaKh" class="btn btn-danger btn-sm kh-btn-xs">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p>
        <a asp-area="admins" asp-controller="Dashboard" asp-action="Index" class="kh-back">
            ⬅ Quay về trang chủ
        </a>
    </p>
</div>